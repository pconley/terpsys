<%= simple_form_for(@consumer) do |f| %>

  <%= render 'partials/model_errors', resource: @consumer %>

  <%= f.simple_fields_for :user do |p| %>
  	<%= p.input :username %>
  	<%= p.input :email %>
  	<%= p.input :password %>
  <% end %>
  
  <%= f.input :last_name %>
  <%= f.input :first_name %>
  <%= f.input :gender, collection: ['m','f'], prompt: "Select gender" %>

  <%= f.button :submit, class: 'button-create' %>

<% end %>