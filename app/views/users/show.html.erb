<p><strong>Name: </strong><%= @user.username %></p>
<p><strong>Email: </strong><%= @user.email %></p>
<p><strong>Roles: </strong><%= @user.roles %></p>

<% if @user.has_role? :interpreter %>
	<p><strong>Skill Level (H,M,L): </strong><%= @user.interpreter.try(:skill_level) %></p>
	<p><strong>Hourly Rate (cents): </strong><%= @user.interpreter.try(:hourly_rate) %></p>
<% end %>

<% if @user.has_role? :consumer %>
	<p><strong>Full Name: </strong><%= @user.consumer.try(:full_name) %></p>
	<p><strong>Gender (m/f): </strong><%= @user.consumer.try(:gender) %></p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
