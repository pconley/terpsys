<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name&nbsp;&nbsp;&nbsp;</th>
      <th>Email&nbsp;&nbsp;&nbsp;</th>
      <th>Roles&nbsp;&nbsp;&nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= user.email %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= user.roles %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'Show', user %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'Edit', edit_user_path(user) %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
