<h1>Users</h1>

<table class="table table-striped">
<thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Roles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.roles_string %></td>
        <td><%= link_to 'Details', user, class: 'button-show' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'button-edit' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'button-create' %>
