<h1>Dashboard (Interpreter)</h1>

<div class='row'>
	<div class="col-md-4">
		<div class='calendar mini-calendar'>
			<%= month_calendar events: @jobs do |date,jobs| %>
				<strong><%= date.strftime("%-d") %></strong>
				<% if jobs.count > 0 %>
					<p><%= pluralize(jobs.count, 'Job')%></p>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h3 class="panel-title">Switchboard</h3>
		  </div>
			<div class="panel-body">
				<p><%= link_to "My General Notes...", admin_consumers_path %></p>
				<p><%= link_to "#{@jobs.count} Available Jobs...", admin_jobs_path %></p>
				<p><%= link_to "My Past Jobs (#{@past_jobs.count})...", admin_jobs_path %></p>
				<p><strong><%= link_to "My Jobs Today (#{@today_jobs.count})...", admin_jobs_path %></strong></p>
				<p><%= link_to "My Pending Jobs (#{@future_jobs.count})...", admin_jobs_path %></p>
				<p><%= link_to "My Consumer Notes...", '#' %></p>
				<p><%= link_to "My Invoices...", '#' %></p>
				<p><%= link_to "My Pay History...", '#' %></p>
				<p><%= link_to "My Profile...", '#' %></p>
			</div>
			<div class="panel-footer">Panel footer</div>
		</div>
	</div>
	<div class="col-md-4">
	</div>
</div>

