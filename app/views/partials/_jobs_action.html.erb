<h3>Jobs (Action View)</h3>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Job#</th>
      <th>State</th>
	  <% if view != :interpreter %>
	  	<th>Interpreter</th>
	  <% end %>
	  <% if view != :consumer %>
	  	<th>Consumer</th>
	  <% end %>
	  <% if view != :customer %>
	  	<th>Customer</th>
	  <% end %>
      <th>When</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% events.each do |job| %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.state.to_s.capitalize %></td>
		<% if view != :interpreter %>
			  <td><%= job.interpreter.try(:username) %></td>
		<% end %>
		<% if view != :consumer %>
			  <td><%= job.consumer.try(:fullname) %></td>
		<% end %>
		<% if view != :customer %>
			  <td><%= job.customer.try(:company_name) %></td>
		<% end %>
        <td><%= job.when %></td>
        <td><%= job.description %></td>
		<% if view == :admin %>
        	<td><%= link_to 'Show',      admin_job_path(job), class: 'button-show' %></td>
        	<td><%= link_to 'Edit', edit_admin_job_path(job), class: 'button-edit' %></td>
        	<td><%= link_to 'Destroy',  admin_jobs_path(job), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-destroy' %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
