<h3>Jobs (Action View)</h3>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Job#</th>
      <th>State</th>
      <th>Consumer</th>
      <th>Interpreter</th>
      <th>When</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% events.each do |job| %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.state.to_s.capitalize %></td>
        <td><%= job.consumer.username %></td>
        <td><%= job.interpreter.email %></td>
        <td><%= job.when %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job, class: 'button-show' %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: 'button-edit' %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
