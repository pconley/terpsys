<h1>Interpreters</h1>

<table>
  <thead>
    <tr>
      <th>Name&nbsp;&nbsp;&nbsp;</th>
      <th>Skill Level&nbsp;&nbsp;&nbsp;</th>
      <th>Hourly Rate&nbsp;&nbsp;&nbsp;</th>
      <th>Email&nbsp;&nbsp;&nbsp;</th>
      <th>Roles&nbsp;&nbsp;&nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interpreters.each do |interpreter| %>
      <tr>
        <td><%= interpreter.user.name %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= interpreter.skill_level %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= interpreter.hourly_rate %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= interpreter.user.email %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= interpreter.user.roles %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'Show', interpreter %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'Edit', edit_interpreter_path(interpreter) %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'Destroy', interpreter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interpreter', new_interpreter_path %>
