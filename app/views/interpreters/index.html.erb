<h1>Interpreters</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gigs</th>
      <th>Default Rate</th>
      <th>Email</th>
      <th>Roles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.interpreter_jobs.count %></td>
        <td><%= format_as_dollars(user.default_payrate) %></td>
        <td><%= user.email %></td>
        <td><%= user.roles_to_s %></td>
        <td><%= link_to 'Show', interpreter_path(user), class: 'button-show' %></td>
        <td><%= link_to 'Edit', edit_interpreter_path(user), class: 'button-edit' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'New Interpreter', new_interpreter_path, class: 'button-create' %>
