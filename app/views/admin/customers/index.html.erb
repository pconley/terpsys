<h1>Customers</h1>

<table class="table table-bordered">  <thead>
    <tr>
      <th>Company</th>
      <th>Jobs</th>
      <th>Requester</th>
      <th>Requester Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.company_name, admin_customer_path(customer) %></td>
        <td><%= customer.jobs.count %></td>
        <td><%= customer.requester_name %></td>
        <td><%= customer.requester_email %></td>
        <td><%= link_to 'Edit', edit_admin_customer_path(customer), class: "button-edit" %></td>
        <td><%= link_to 'Destroy', admin_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' }, class: "button-destroy" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Customer', new_admin_customer_path, class: "button-create" %>
