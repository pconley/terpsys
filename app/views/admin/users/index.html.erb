<h1>Users</h1>

<table class="table table-striped">
<thead>
    <tr>
	  <th>Email</th>
      <th>Name</th>
      <th>Roles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.fullname %></td>
        <td><%= user.roles_to_s %></td>
        <td><%= link_to 'Details', admin_users_path(user), class: 'button-show' %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'button-edit' %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: 'button-create' %>
