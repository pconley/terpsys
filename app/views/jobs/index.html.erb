<h1>Jobs</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Job#</th>
      <th>Status</th>
      <th>Consumer</th>
      <th>Interpreter</th>
      <th>When</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.id %></td>
        <td><%= job.status %></td>
        <td><%= job.consumer.email %></td>
        <td><%= job.interpreter.try(:email) %></td>
        <td><%= job.when %></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job, class: 'button-show' %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: 'button-edit' %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button-destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'Schedule a New Job', new_job_path, class: 'button-create' %>
